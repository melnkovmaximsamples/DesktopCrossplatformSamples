<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/layout.css">
    <link rel="stylesheet" href="~/AspNetElectron.styles.css">
</head>
<body>

    <div class="menu">
        <div class="links">
            <a class="links__item" asp-controller="Messages" asp-action="GetAllMessages">Все сообщения</a>
            <a class="links__item" asp-controller="Messages" asp-action="AddMessage">Добавить сообщение</a>
            <form asp-controller="Messages" asp-action="RemoveAllMessages">
                <button class="links__item">Удалить все</button>
            </form>
        </div>

        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Обязательно для всех скриптов, иначе они не работают в Electron.NET -->
    <!-- Insert this line above script imports  -->
    <script>if (typeof module === 'object') { window.module = module; module = undefined; }</script>

    <!-- normal script imports etc  -->
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Insert this line after script imports -->
    <script>if (window.module) module = window.module;</script>
</body>
</html>